{
  "mcpServers": {
    "unity-mcp": {
      "command": "node",
      "args": ["<ABSOLUTE_PATH_TO_PROJECT>/Server/build/index.js"],
      "cwd": "<ABSOLUTE_PATH_TO_PROJECT>",
      "env": {
        "NODE_ENV": "production",
        "UNITY_PORT": "8090"
      },
      "description": "Unity Editor integration for Windsurf IDE",
      "enabled": true
    }
  }
} 